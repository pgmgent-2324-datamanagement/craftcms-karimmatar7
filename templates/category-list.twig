{% extends "layouts/base.twig" %}

{% block body %}

<div class="crumbs" style="padding-bottom: 2rem;">
    <a class="text-decoration-none text-dark" href="{{ siteUrl }}">{{ siteName }}</a> &gt;
    <a class="text-decoration-none text-dark" href="/categories">Categories</a>
</div>
<div class="container">
    <h2 class="text-center my-4">Product Categories</h2>
    <ul class="list-unstyled">
        {% set categories = craft.categories.group('productCategories').all() %}
        {% for category in categories %}
            <li class="border">
                <a href="{{ category.url }}" class="text-decoration-none text-dark d-block p-2">
                    {{ category.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
